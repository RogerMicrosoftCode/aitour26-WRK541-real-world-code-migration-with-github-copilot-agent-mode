# Copy this file to .env and fill in the values.
# NEVER commit .env to source control.

# Azure Subscription ID
AZURE_SUBSCRIPTION_ID=

# Base name for resource naming convention
AZURE_BASE_NAME=demoaitourmxJJ

# Azure region
AZURE_LOCATION=eastus2

# Application Insights connection string (output from Bicep deployment)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Key Vault URI (output from Bicep deployment)
AZURE_KEYVAULT_URI=

# Python app local port
PYTHON_APP_PORT=8000

# C# app local port (Kestrel)
CSHARP_APP_PORT=5000

# Base URL for smoke tests (change to Azure URL after deployment)
BASE_URL_PYTHON=http://localhost:8000
BASE_URL_CSHARP=http://localhost:5000
